/* component/time-line/time-line.wxss */

.time-line {
  width: 100%;
  min-height: 100rpx;
  display: inline-flex;
}

.line-item {
  position: relative;
  flex: auto;
}

.line {
  margin: 0 auto;
  width: 0;
  height: 100%;
  border-width: 1rpx;
  border-style: dashed;
}

.icon-img {
  position: absolute;
  top: 30rpx;
  left: calc(50% - 25rpx);
  width: 50rpx;
  height: 40rpx;
  padding: 0 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #fff;
  box-shadow: 4rpx 4rpx 10rpx #888888;
}

.content-item {
  flex-basis: 80%;
  display: inline-flex;
  padding: 10rpx 0 0;
}

.arrow {
  margin-top: 25rpx;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
}

.bubble-box {
  flex: 1;
  min-height: 100rpx;
  border-radius: 0 8rpx 8rpx 0;
  border-width: 2rpx 2rpx 2rpx 8rpx;
  border-style: solid;
  border-image: initial;
}

.title {
  width: calc(100% - 30rpx);
  padding: 10rpx 15rpx 5rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #555;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom: 2rpx dashed #f0f0f0;
}

.content {
  width: calc(100% - 30rpx);
  padding: 5rpx 15rpx 10rpx;
  font-size: 30rpx;
}

.timestamp{
  width: calc(100% - 30rpx);
  padding: 0 15rpx 10rpx;
  font-size: 28rpx;
  text-align: right;
  color: #aaa;
}