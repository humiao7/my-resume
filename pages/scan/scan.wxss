/* pages/scan/scan.wxss */
page{
  background-color: #efefef;
  height: 100%;
}

.scan-result{
  padding: 30rpx;
  background: #fff;
}

.title{
  position: absolute;
  top: 5rpx;
  left: 40%;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #aaa;
  background: #fff;
}

.result{
  width: calc(100% - 60rpx);
  padding: 30rpx;
  min-height: 300rpx;
  border: 2rpx solid #aaa;
  border-radius: 20rpx;
  white-space: normal;
  word-break: break-all;
}

.scanIcon{
  position: fixed;
  bottom: 20rpx;
  left: calc(50% - 75rpx);
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 1px 1.6vw rgba(32,33,36,.28);
}

.mini-btn{
  margin-top: 20rpx;
  font-size: 32rpx;
}